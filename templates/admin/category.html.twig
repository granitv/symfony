{% extends 'admin/baseadmin.html.twig' %}

{% block body %}
  <div class="row justify-content-center">
      <div class="col-md-6">
          <h4>Category</h4>

          {% for cat in categorys %}
              <ul class="border py-2">
                  <li>Name: {{ cat.name }} </li>
                  <li><a class="btn-sm btn-info" href="{{ path('editcat',{ id : cat.id }) }}">Update</a>
                      <a onclick='return confirm("Are you sure you wanna delete tihs category?")'
                         class="ml-4 btn-danger btn-sm " href="{{ path('delete',{ repository: 'Category',id : cat.id,redirect: 'cat' }) }}">Delete</a></li>
              </ul>
          {% endfor %}

          {{ form(catForm) }}
      </div>
  </div>
{% endblock %}
