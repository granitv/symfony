{% extends 'base.html.twig'%}

{% block body %}
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">View Details</th>
        </tr>
        </thead>
        <tbody>
        {% for person in persons %}
            <tr>
                <th scope="row">{{ person.id }}</th>
                <td>{{ person.name }}</td>
                <td>{{ person.gender}} </td>
                <td><a class="btn btn-success" href="{{ path('one_user', {id : person.id }) }}">Details</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock  %}

